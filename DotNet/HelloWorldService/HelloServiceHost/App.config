<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  
  <system.serviceModel>    
    <services>
      <service name="HelloWorldService.HelloService" behaviorConfiguration="mexBehaviour">
        
        <endpoint address="HelloService" binding="basicHttpBinding" contract="HelloWorldService.IHelloService"></endpoint>
        <endpoint address="HelloService" binding="netTcpBinding" contract="HelloWorldService.IHelloService"></endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"></endpoint>

        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8085/"/>
            <add baseAddress="net.tcp://localhost:8086/"/>
          </baseAddresses>
        </host>
        
      </service>
    </services>

    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehaviour">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>        
      </serviceBehaviors>
    </behaviors>
    
  </system.serviceModel>
</configuration>